#
# Build the docker image with `npx nx docker-build house-alert`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t house-alert`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system house-alert && \
          adduser --system -G house-alert house-alert

COPY dist/apps/house-alert house-alert
RUN chown -R house-alert:house-alert .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix house-alert --omit=dev -f install

CMD [ "node", "house-alert" ]
